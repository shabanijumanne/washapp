<!DOCTYPE html>
<html lang="en">

<head>

  <% include ../../views/functions %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>WASH</title>
  <link rel="stylesheet" href="../../../vendors/iconfonts/font-awesome/css/all.min.css">
  <link rel="stylesheet" href="../../../vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="../../../vendors/css/vendor.bundle.addons.css">
  <link rel="stylesheet" href="../../../css/style.css">
  <link rel="shortcut icon" href="../../../images/favicon.png" />
</head>

<body>

  <div class="container-scroller">

    <% include ../partials/navigation %>

    <div class="main-panel">

      <div class="content-wrapper">

        <% include ../partials/alert %>

        <% include ../partials/top_header %>

        <div class="row">
          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Add School</h4>

                <form action="/schools/add" method="POST" class="forms-sample">
                  <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input type="text" name="title" class="form-control" id="exampleInputName1"
                      placeholder="title">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Boys</label>
                    <input type="text" name="no_boys" class="form-control" id="exampleInputName1"
                      placeholder="no of boys">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Girls</label>
                    <input type="text" name="no_girls" class="form-control" id="exampleInputName1"
                      placeholder="no of girls">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Address</label>
                    <input type="text" name="street_address" class="form-control" id="exampleInputName1"
                      placeholder="street address">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Ward</label>
                    <input type="text" name="ward" class="form-control" id="exampleInputName1"
                      placeholder="ward">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">District</label>
                    <input type="text" name="district" class="form-control" id="exampleInputName1"
                      placeholder="district">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Region</label>
                    <input type="text" name="region" class="form-control" id="exampleInputName1"
                      placeholder="region">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Headmaster</label>
                    <input type="text" name="headmaster" class="form-control" id="exampleInputName1"
                      placeholder="headmaster">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputName1">Coordinator</label>
                    <input type="text" name="coordinator" class="form-control" id="exampleInputName1"
                      placeholder="coordinator">
                  </div>
                  
                  <div class="form-group">
                    <label for="exampleInputName1">phoneNumber</label>
                    <input type="text" name="coordinator" class="form-control" id="exampleInputName1"
                      placeholder="phoneNumber">
                  </div>

                  <div></div>

                  <button type="submit" class="btn btn-primary mr-2">Save</button>
                  <a href="/schools" class="btn btn-light">Cancel</a>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% include ../partials/footer %>